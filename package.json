{
  "name": "real-time-salary-calculator",
  "version": "1.0.0",
  "description": "一个实时计算工资的桌面应用程序",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "工资",
    "计算器",
    "实时",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.makemoney.calculator",
    "productName": "实时工资计算器",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true,
    "compression": "maximum"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0"
  }
}
